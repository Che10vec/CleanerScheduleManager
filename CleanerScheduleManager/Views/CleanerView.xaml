<Page
    x:Class="CleanerScheduleManager.Views.CleanerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="CleanerView">

    <materialDesign:ColorZone
        Mode="PrimaryLight"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <StackPanel
            Margin="20">

            <TextBlock
                Margin="0 0 0 10"
                Text="Cleaners"
                Style="{StaticResource MaterialDesignHeadline5TextBlock}" />

            <StackPanel
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                        <Setter Property="Margin" Value="0 0 10 0" />
                    </Style>
                </StackPanel.Resources>
                <Button
                    Content="Add"
                    Command="{Binding AddCleanerCommand}" />
                <Button
                    Content="Delete"
                    Command="{Binding DeleteCleanerCommand}" />
            </StackPanel>

            <DataGrid
                ItemsSource="{Binding Cleaners}"
                SelectedItem="{Binding SelectedCleaner}"
                AutoGenerateColumns="False"
                Margin="0 10 0 0"
                CanUserAddRows="False"
                Style="{StaticResource MaterialDesignDataGrid}">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="ID"
                        Binding="{Binding Id}" />
                    <DataGridTextColumn
                        Header="Name"
                        Binding="{Binding Name}" />
                    <DataGridComboBoxColumn
                        Header="Skill Level"
                        SelectedItemBinding="{Binding SkillLevel}"
                        ItemsSource="{Binding DataContext.SkillLevels, RelativeSource={RelativeSource AncestorType={x:Type Page}}}" />
                    <DataGridCheckBoxColumn
                        Header="Available"
                        Binding="{Binding IsAvailable}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </materialDesign:ColorZone>
</Page>