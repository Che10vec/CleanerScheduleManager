<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="PageHeader"
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="24" />
        <Setter
            Property="FontWeight"
            Value="Bold" />
        <Setter
            Property="Margin"
            Value="0 0 0 20" />
    </Style>

    <Style
        x:Key="PrimaryButton"
        TargetType="Button">
        <Setter
            Property="Margin"
            Value="5" />
        <Setter
            Property="Padding"
            Value="10 5" />
        <Setter
            Property="FontSize"
            Value="14" />
        <Setter
            Property="MinWidth"
            Value="80" />
    </Style>
</ResourceDictionary>