<Page
    x:Class="CleanerScheduleManager.Views.CleanerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CleanerScheduleManager.ViewModels"
    Title="CleanerView">

    <Page.DataContext>
        <vm:CleanerViewModel />
    </Page.DataContext>

    <StackPanel
        Margin="20">

        <TextBlock
            Text="Cleaners"
            Style="{StaticResource PageHeader}" />

        <StackPanel
            Orientation="Horizontal">
            <Button
                Content="Add"
                Command="{Binding AddCleanerCommand}"
                Style="{StaticResource PrimaryButton}" />
            <Button
                Content="Delete"
                Command="{Binding DeleteCleanerCommand}"
                Style="{StaticResource PrimaryButton}" />
        </StackPanel>

        <DataGrid
            ItemsSource="{Binding Cleaners}"
            SelectedItem="{Binding SelectedCleaner}"
            AutoGenerateColumns="False"
            Margin="0 10 0 0"
            CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="ID"
                    Binding="{Binding Id}" />
                <DataGridTextColumn
                    Header="Name"
                    Binding="{Binding Name}" />
                <DataGridTextColumn
                    Header="Skill Level"
                    Binding="{Binding SkillLevel}" />
                <DataGridCheckBoxColumn
                    Header="Available"
                    Binding="{Binding IsAvailable}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
