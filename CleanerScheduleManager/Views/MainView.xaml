<UserControl
    x:Class="CleanerScheduleManager.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CleanerScheduleManager.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <DockPanel
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <materialDesign:ColorZone
            DockPanel.Dock="Right"
            Mode="PrimaryMid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Menu
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Style="{StaticResource MaterialDesignMenu}">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                
                <MenuItem
                    Header="Cleaners"
                    Command="{Binding NavigateToCleanerCommand}">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon
                            Kind="Broom" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Header="Clients"
                    Command="{Binding NavigateToClientCommand}">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon
                            Kind="Account" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Header="Tasks"
                    Command="{Binding NavigateToTaskCommand}">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon
                            Kind="ClipboardList" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </materialDesign:ColorZone>

        <Frame
            x:Name="MainFrame"
            NavigationUIVisibility="Hidden" />
    </DockPanel>
</UserControl>